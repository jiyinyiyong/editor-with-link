
.editor-with-link
  min-width 200px
  min-height 30px
  display inline-block
  position relative

  box-sizing border-box
  -moz-box-sizing border-box

  *
    box-sizing border-box
    -moz-box-sizing border-box

  .link-views
    position absolute
    top 0
    width 100%
    min-height 30px
    padding 5px 4px
    word-break break-word
    font-size 14px
    white-space pre-wrap
    font-weight 300
    font-family Arial

  .link-editor
    outline none
    border none
    resize none
    margin-bottom 0

  .link-viewer

    a
      color blue
      text-decoration none